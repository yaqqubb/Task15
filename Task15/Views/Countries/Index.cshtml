@model List<Task15.Models.Entities.Countries>
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-hower">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Id
                            </th>
                            <th>
                                Code
                            </th>
                            <th>
                                <a href="/countries/create">Create New</a>
                            </th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Id
                                </td>
                                <td>

                                    @item.Code
                                </td>
                                <td>
                                    <a href="/countries/details/@item.Id">Details</a>
                                    <a href="/countries/edit/@item.Id">Edit </a>
                                    <a href="/countries/remove/@item.Id">Remove</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
   

</body>
</html>
